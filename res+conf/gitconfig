[color]
    ui = true
[user]
    #name = NAME
    #email = EMAIL
[core]
    excludesfile = ~/.gitignore
    whitespace = trailing-space
[alias]
    alias = !git config --get-regexp '^alias\\.' |sed -e 's:^alias\\.::' -e '/^alias/d' -e 's:\\ :\\t:' |column -ts '\t'
    s = status --short
    brieflog = !GIT_PAGER=cat git log --oneline -10
    graph = log --all --oneline --decorate --graph
    reset-unmerged = !git reset -- $(git ls-files --unmerged |cut -f2 |uniq)
    fixup = !GIT_EDITOR=true git rebase --autosquash -i
    l = !git brieflog
    apply-patch = !\
        git apply --check \"$2\" && \
        git apply \"$2\" && \
        git add . && \
        git commit -am \"apply $(basename \"$2\")\" --author=\"$1\" && \
        true
    archive-branch = ! git push archive $1 && git branch -D $1
    d = diff
    ds = diff --staged
    co = checkout
    br = branch --sort -committerdate
    parent = ! git log --ancestry-path --reverse --format=%h $2 | sed -n $1p && true
    colog = ! percol | cut -d ' ' -f1 | xargs git checkout
[push]
    default = upstream
[rebase]
    autosquash = true
[grep]
    patternType = perl
    lineNumber = true
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
